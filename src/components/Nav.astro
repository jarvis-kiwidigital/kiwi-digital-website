---
const links = [
  { href: '#services', label: 'Services' },
  { href: '#work', label: 'Work' },
  { href: '#about', label: 'About' },
  { href: '#contact', label: 'Contact' },
];
---

<nav id="nav" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <div class="container-narrow flex items-center justify-between h-20">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2.5 group">
      <img src="/logo-icon-white.png" alt="Kiwi Digital" class="w-8 h-8 object-contain" />
      <span class="font-display font-bold text-lg text-white">
        Kiwi<span class="text-kiwi-400">Digital</span>
      </span>
    </a>

    <!-- Desktop links -->
    <div class="hidden md:flex items-center gap-1">
      {links.map(({ href, label }) => (
        <a href={href} class="px-4 py-2 text-sm text-gray-400 hover:text-white transition-colors duration-300 rounded-full hover:bg-white/5">
          {label}
        </a>
      ))}
    </div>

    <!-- CTA -->
    <div class="hidden md:flex items-center gap-4">
      <a href="#contact" class="btn-primary text-xs !px-5 !py-2.5">
        Get Started
        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>

    <!-- Mobile menu toggle -->
    <button id="menu-toggle" class="md:hidden p-2 text-gray-400 hover:text-white transition-colors" aria-label="Toggle menu">
      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden glass-strong mx-4 mb-4 rounded-2xl overflow-hidden">
    <div class="p-4 flex flex-col gap-1">
      {links.map(({ href, label }) => (
        <a href={href} class="px-4 py-3 text-sm text-gray-300 hover:text-white hover:bg-white/5 rounded-xl transition-all duration-300">
          {label}
        </a>
      ))}
      <div class="pt-2 mt-2 border-t border-white/5">
        <a href="#contact" class="btn-primary w-full justify-center text-xs">Get Started</a>
      </div>
    </div>
  </div>
</nav>

<script>
  const nav = document.getElementById('nav')!;
  const toggle = document.getElementById('menu-toggle')!;
  const menu = document.getElementById('mobile-menu')!;

  // Scroll effect
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const scrolled = window.scrollY;
    if (scrolled > 100) {
      nav.classList.add('bg-dark-900/80', 'backdrop-blur-xl', 'border-b', 'border-white/5');
    } else {
      nav.classList.remove('bg-dark-900/80', 'backdrop-blur-xl', 'border-b', 'border-white/5');
    }
    lastScroll = scrolled;
  }, { passive: true });

  // Mobile menu
  toggle.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  menu.querySelectorAll('a').forEach(a => {
    a.addEventListener('click', () => menu.classList.add('hidden'));
  });
</script>
