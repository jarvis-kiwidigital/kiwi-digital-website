        <h2 class="font-display font-bold text-4xl md:text-5xl text-white leading-tight">
          Built for <span class="gradient-text">real business</span>
        </h2>
      </div>
      <p class="text-gray-400 max-w-md leading-relaxed">
        From SaaS platforms to custom tools — we build what businesses globally actually need. Not templates. Solutions.
      </p>
    </div>

    <!-- Featured Projects (Large Cards) -->
    <div class="grid lg:grid-cols-3 gap-6 mb-6">
      {featuredProjects.map((project, i) => (
        <div
          class="group glass rounded-2xl overflow-hidden spotlight border-glow hover-lift flex flex-col"
          data-animate
          style={`transition-delay: ${i * 100}ms;`}
        >
          {/* Project Image Carousel */}
          {project.images && project.images.length > 0 && (
            <div class="relative h-64 overflow-hidden bg-gradient-to-br from-gray-900 to-gray-800">
              <div class="project-carousel flex h-full overflow-x-auto snap-x snap-mandatory scrollbar-hide" data-carousel>
                {project.images.map((img: string, imgIdx: number) => (
                  <div class="flex-none w-full h-full snap-center relative">
                    <img 
                      src={img} 
                      alt={`${project.title} screenshot ${imgIdx + 1}`}
                      class="w-full h-full object-cover object-top opacity-80 group-hover:opacity-100 transition-opacity duration-500"
                      loading={imgIdx === 0 ? 'eager' : 'lazy'}
                    />
                  </div>
                ))}
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/20 to-transparent pointer-events-none"></div>
              
              {/* Dot indicators */}
              {project.images.length > 1 && (
                <div class="absolute bottom-3 left-1/2 -translate-x-1/2 flex gap-1.5 z-10">
                  {project.images.map((_: string, dotIdx: number) => (
                    <button 
                      class="carousel-dot w-1.5 h-1.5 rounded-full bg-white/40 transition-all duration-300 hover:bg-white/80"
                      data-slide={dotIdx}
                      aria-label={`View screenshot ${dotIdx + 1}`}
                    ></button>
                  ))}
                </div>
              )}

              {/* Status badge */}
              <div class="absolute top-4 right-4 z-10">
                <span class={`px-3 py-1 text-xs font-mono rounded-full border backdrop-blur-sm ${project.tagStyle} bg-gray-900/60`}>
                  {project.status}
                </span>
              </div>

              {/* Swipe hint */}
              {project.images.length > 1 && (
                <div class="absolute top-4 left-4 z-10 opacity-0 group-hover:opacity-100 transition-opacity">
                  <span class="px-2 py-1 text-[10px] font-mono text-white/50 bg-gray-900/60 backdrop-blur-sm rounded-full">
                    ← swipe →
