    tags: ['Analytics', 'Custom Tool', 'Agriculture', 'NZ Industry'],
    color: 'from-amber-500/20 to-yellow-500/20',
    accent: 'text-amber-400',
    accentBg: 'bg-amber-500/10 border-amber-500/20',
    link: 'https://melitahoney.com',
    image: null,
  },
  {
