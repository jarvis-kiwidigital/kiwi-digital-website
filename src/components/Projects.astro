---
const projects = [
  {
    title: 'SkyGrid Mission Hub',
    category: 'Drone Operations',
    description: 'Multi-portal platform for autonomous drone inspection. Real-time fleet management, CAA compliance, and client dashboards for NZ infrastructure operators.',
    tags: ['Next.js', 'Supabase', 'Real-time', 'Multi-Portal'],
    gradient: 'from-blue-500 to-cyan-500',
    accent: 'text-blue-400',
    tagStyle: 'text-blue-300/80 bg-blue-500/8 border-blue-500/10',
    link: 'https://skygrid.co.nz',
    status: 'Live',
  },
  {
    title: 'Clockie',
    category: 'Time & Attendance SaaS',
    description: 'Clock in/out platform for NZ SMBs. Payroll integration, GPS verification, leave management — built for NZ employment law compliance.',
    tags: ['SaaS', 'PWA', 'Multi-Tenant', 'NZ Compliance'],
    gradient: 'from-kiwi-500 to-emerald-500',
    accent: 'text-kiwi-400',
    tagStyle: 'text-kiwi-300/80 bg-kiwi-500/8 border-kiwi-500/10',
    link: null,
    status: 'Beta',
  },
  {
    title: 'SafePing',
    category: 'Lone Worker Safety',
    description: 'Safety check-in PWA for remote workers. Timed check-ins, panic button, automated escalation — meeting NZ H&S obligations.',
    tags: ['PWA', 'Offline-First', 'Real-time', 'Safety'],
    gradient: 'from-orange-500 to-red-500',
    accent: 'text-orange-400',
    tagStyle: 'text-orange-300/80 bg-orange-500/8 border-orange-500/10',
    link: null,
    status: 'Beta',
  },
  {
    title: 'Melita Honey Blending',
    category: 'Agricultural Analytics',
    description: 'Custom blending analysis for NZ Honey Group. Lab results + inventory → optimal blend plans for consistent UMF ratings.',
    tags: ['Analytics', 'Agriculture', 'Custom Tool'],
    gradient: 'from-amber-500 to-yellow-500',
    accent: 'text-amber-400',
    tagStyle: 'text-amber-300/80 bg-amber-500/8 border-amber-500/10',
    link: 'https://melitahoney.com',
    status: 'Live',
  },
  {
    title: 'Insight Equity',
    category: 'Building Audit Platform',
    description: 'Mobile-first building audit app. Offline photo capture, automated report generation, and client portal for real-time tracking.',
    tags: ['PWA', 'Offline-First', 'Report Gen'],
    gradient: 'from-violet-500 to-purple-500',
    accent: 'text-violet-400',
    tagStyle: 'text-violet-300/80 bg-violet-500/8 border-violet-500/10',
    link: 'https://insightequity.co.nz',
    status: 'Live',
  },
  {
    title: 'WOW Tents CRM',
    category: 'Luxury Glamping Ops',
    description: 'Custom CRM for EcoPod glamping operations. Lead tracking, booking management, and portfolio management across NZ and South Africa.',
    tags: ['CRM', 'Multi-Region', 'Hospitality'],
    gradient: 'from-gray-400 to-gray-500',
    accent: 'text-gray-300',
    tagStyle: 'text-gray-300/80 bg-gray-500/8 border-gray-500/10',
    link: 'https://wowtents.co',
    status: 'Live',
  },
];
---

<section id="work" class="section-padding relative">
  <div class="container-wide">
    <!-- Section header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-16" data-animate>
      <div>
        <p class="text-kiwi-400 font-mono text-sm tracking-wider uppercase mb-4">Our Work</p>
        <h2 class="font-display font-bold text-4xl md:text-5xl text-white leading-tight">
          Built for <span class="gradient-text">real business</span>
        </h2>
      </div>
      <p class="text-gray-400 max-w-md leading-relaxed">
        From drone ops to honey blending — we build what NZ businesses actually need. Not templates. Solutions.
      </p>
    </div>

    <!-- Project grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
      {projects.map((project, i) => (
        <div
          class="group glass rounded-2xl overflow-hidden spotlight border-glow hover-lift flex flex-col"
          data-animate
          style={`transition-delay: ${i * 80}ms;`}
        >
          {/* Gradient header */}
          <div class={`h-1 bg-gradient-to-r ${project.gradient} opacity-60 group-hover:opacity-100 transition-opacity`}></div>

          <div class="p-6 flex-1 flex flex-col">
            {/* Top row */}
            <div class="flex items-start justify-between mb-4">
              <div>
                <p class={`text-[10px] font-mono tracking-wider uppercase mb-1 ${project.accent}`}>
                  {project.category}
                </p>
                <h3 class="font-display font-semibold text-lg text-white group-hover:text-kiwi-300 transition-colors duration-300">
                  {project.title}
                </h3>
              </div>
              <span class={`px-2 py-0.5 text-[10px] font-mono rounded-full border ${project.tagStyle}`}>
                {project.status}
              </span>
            </div>

            {/* Description */}
            <p class="text-gray-400 text-sm leading-relaxed mb-5 flex-1">
              {project.description}
            </p>

            {/* Tags */}
            <div class="flex flex-wrap gap-1.5 mb-4">
              {project.tags.map(tag => (
                <span class={`px-2 py-0.5 text-[10px] font-medium rounded-full border ${project.tagStyle}`}>
                  {tag}
                </span>
              ))}
            </div>

            {/* Link */}
            {project.link && (
              <a href={project.link} target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 text-xs text-gray-500 hover:text-kiwi-400 transition-colors duration-300 mt-auto pt-3 border-t border-white/5">
                <span>{project.link.replace('https://', '')}</span>
                <svg class="w-3 h-3 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
