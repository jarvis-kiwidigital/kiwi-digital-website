---

<section id="work" class="section-padding relative">
  <div class="container-narrow">
    <!-- Section header -->
    <div class="max-w-2xl mb-20" data-animate>
      <p class="text-kiwi-400 font-mono text-sm tracking-wider uppercase mb-4">Our Work</p>
      <h2 class="font-display font-bold text-4xl md:text-5xl text-white leading-tight mb-6">
        Built for <span class="gradient-text">NZ business</span>
      </h2>
      <p class="text-gray-400 text-lg leading-relaxed">
        Real products solving real problems. From drone operations to honey blending — we build what NZ businesses actually need.
      </p>
    </div>

    <!-- Project grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project, i) => (
        <div
          class="group glass rounded-2xl overflow-hidden hover-lift flex flex-col"
          data-animate
          style={`transition-delay: ${i * 80}ms;`}
        >
          {/* Gradient header bar */}
          <div class={`h-1 bg-gradient-to-r ${project.color}`}></div>

          <div class="p-7 flex-1 flex flex-col">
            {/* Category */}
            <p class={`text-xs font-mono tracking-wider uppercase mb-3 ${project.accent}`}>
              {project.category}
            </p>

            {/* Title */}
            <h3 class="font-display font-semibold text-lg text-white mb-3 group-hover:text-kiwi-300 transition-colors duration-300">
              {project.title}
            </h3>

            {/* Description */}
            <p class="text-gray-400 text-sm leading-relaxed mb-5 flex-1">
              {project.description}
            </p>

            {/* Tags */}
            <div class="flex flex-wrap gap-2 mb-5">
              {project.tags.map(tag => (
                <span class={`px-2.5 py-0.5 text-[11px] font-medium rounded-full border ${project.accentBg} ${project.accent}`}>
                  {tag}
                </span>
              ))}
            </div>

            {/* Link */}
            {project.link && (
              <a href={project.link} target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 text-sm text-gray-500 hover:text-kiwi-400 transition-colors duration-300 mt-auto">
                <span>Visit</span>
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
