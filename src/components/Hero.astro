<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated background -->
  <div class="absolute inset-0" data-parallax>
    <!-- Gradient orbs -->
    <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] rounded-full bg-kiwi-500/8 blur-[120px] animate-morph"></div>
    <div class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] rounded-full bg-ocean-500/8 blur-[100px] animate-morph" style="animation-delay: -4s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] rounded-full bg-kiwi-600/5 blur-[80px] animate-pulse-slow"></div>

    <!-- Grid -->
    <div class="absolute inset-0 grid-bg opacity-40"></div>

    <!-- Radial fade -->
    <div class="absolute inset-0 bg-radial-gradient"></div>
  </div>

  <!-- Orbiting elements -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] md:w-[500px] md:h-[500px]">
    <div class="absolute inset-0 rounded-full border border-kiwi-500/10 animate-[spin_30s_linear_infinite]"></div>
    <div class="absolute inset-8 rounded-full border border-ocean-400/10 animate-[spin_25s_linear_infinite_reverse]"></div>
    <div class="absolute inset-16 rounded-full border border-kiwi-300/5 animate-[spin_20s_linear_infinite]"></div>

    <!-- Orbit dots -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-2 h-2 rounded-full bg-kiwi-400 shadow-lg shadow-kiwi-400/50 animate-[spin_30s_linear_infinite] origin-[50%_250px] md:origin-[50%_250px]"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-1.5 h-1.5 rounded-full bg-ocean-400 shadow-lg shadow-ocean-400/50 animate-[spin_25s_linear_infinite_reverse] origin-[50%_200px] md:origin-[50%_200px]"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-narrow text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full glass mb-8 animate-slide-down" style="animation-delay: 0.2s; animation-fill-mode: both;">
      <span class="w-2 h-2 rounded-full bg-kiwi-400 animate-pulse"></span>
      <span class="text-xs font-medium text-gray-400 tracking-wide uppercase">AI-Native Development Studio</span>
    </div>

    <!-- Heading -->
    <h1 class="font-display font-bold text-5xl sm:text-6xl md:text-7xl lg:text-8xl leading-[0.9] tracking-tight mb-8 animate-slide-up" style="animation-delay: 0.3s; animation-fill-mode: both;">
      <span class="text-white">We build</span><br />
      <span class="gradient-text">intelligent</span><br />
      <span class="text-white">systems</span>
    </h1>

    <!-- Subtitle -->
    <p class="max-w-2xl mx-auto text-lg md:text-xl text-gray-400 leading-relaxed mb-12 animate-slide-up text-balance" style="animation-delay: 0.5s; animation-fill-mode: both;">
      AI-powered software that transforms how New Zealand businesses operate.
      From automation to full-stack applications â€” engineered for impact.
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-slide-up" style="animation-delay: 0.7s; animation-fill-mode: both;">
      <a href="#contact" class="btn-primary">
        Start a Conversation
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
      <a href="#work" class="btn-secondary">
        See Our Work
      </a>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce opacity-30">
      <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
      </svg>
    </div>
  </div>

  <style>
    .bg-radial-gradient {
      background: radial-gradient(ellipse at center, transparent 30%, rgba(10, 10, 15, 0.8) 70%, rgba(10, 10, 15, 1) 100%);
    }
  </style>
</section>
