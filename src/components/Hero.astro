---
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Animated background -->
  <div class="absolute inset-0 overflow-hidden" data-parallax>
    <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] rounded-full bg-kiwi-500/8 blur-[120px] animate-morph"></div>
    <div class="absolute bottom-1/3 right-1/4 w-[500px] h-[500px] rounded-full bg-ocean-500/6 blur-[100px] animate-morph" style="animation-delay: -4s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] rounded-full bg-kiwi-600/4 blur-[80px] animate-pulse-slow"></div>
    <div class="absolute inset-0 grid-bg opacity-40"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,transparent_30%,rgba(10,10,15,0.8)_70%,rgba(10,10,15,1)_100%)]"></div>
  </div>

  <div class="relative z-10 container-wide overflow-hidden">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center min-w-0">
      <!-- Left: Text -->
      <div>
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full glass mb-8 animate-slide-down" style="animation-delay: 0.2s; animation-fill-mode: both;">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-kiwi-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-kiwi-400"></span>
          </span>
          <span class="text-[10px] sm:text-xs font-medium text-gray-400 tracking-wide">Trusted by businesses across NZ & globally</span>
        </div>

        <!-- Heading -->
        <h1 class="font-display font-bold text-[2.5rem] sm:text-5xl md:text-6xl lg:text-7xl leading-[0.95] tracking-tight mb-8 animate-slide-up" style="animation-delay: 0.3s; animation-fill-mode: both;">
          <span class="text-white">Your Business</span><br />
          <span class="text-white">Runs on Effort.</span><br />
          <span class="gradient-text">It Should Run on Software.</span>
        </h1>

        <!-- Subtitle -->
        <p class="max-w-lg text-base sm:text-lg text-gray-400 leading-relaxed mb-10 animate-slide-up text-balance" style="animation-delay: 0.5s; animation-fill-mode: both;">
          Stop wasting time on manual processes, spreadsheets, and paper trails. 
          We build custom software that automates repetitive tasks, digitises your workflows, 
          and saves you money.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row items-start gap-4 animate-slide-up" style="animation-delay: 0.7s; animation-fill-mode: both;">
          <a href="#contact" class="btn-primary">
            Book a Free Consultation
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
          <a href="#work" class="btn-secondary">
            See Our Work
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="flex items-center gap-5 sm:gap-8 mt-12 animate-fade-in" style="animation-delay: 1s; animation-fill-mode: both;">
          <div class="flex items-center gap-2">
            <span class="text-xl sm:text-2xl font-display font-bold text-white" data-count="127+">127+</span>
            <span class="text-[10px] sm:text-xs text-gray-500 leading-tight">Businesses<br/>Helped</span>
          </div>
          <div class="w-px h-8 bg-white/10"></div>
          <div class="flex items-center gap-2">
            <span class="text-xl sm:text-2xl font-display font-bold text-white" data-count="10+">10+</span>
            <span class="text-[10px] sm:text-xs text-gray-500 leading-tight">Years<br/>Experience</span>
          </div>
          <div class="w-px h-8 bg-white/10"></div>
          <div class="flex items-center gap-2">
            <span class="text-xl sm:text-2xl font-display font-bold text-white" data-count="$200M">$200M</span>
            <span class="text-[10px] sm:text-xs text-gray-500 leading-tight">Value<br/>Created</span>
          </div>
        </div>
      </div>

      <!-- Right: Business transformation visual -->
      <div class="animate-slide-up hidden lg:block" style="animation-delay: 0.6s; animation-fill-mode: both;">
        <div class="relative">
          <!-- Main stats card -->
          <div class="glass-strong rounded-2xl p-8 shadow-2xl shadow-kiwi-500/5 border-glow">
            <div class="space-y-6">
              <!-- Hours saved -->
              <div class="flex items-center justify-between">
                <div>
                  <div class="text-xs text-gray-500 mb-1">Hours Saved per Week</div>
                  <div class="font-display font-bold text-3xl text-white">24.5</div>
                </div>
                <div class="w-12 h-12 rounded-xl bg-kiwi-500/20 flex items-center justify-center">
                  <svg class="w-6 h-6 text-kiwi-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>

              <div class="h-px bg-white/5"></div>

              <!-- Tasks automated -->
              <div class="flex items-center justify-between">
                <div>
                  <div class="text-xs text-gray-500 mb-1">Tasks Automated</div>
                  <div class="font-display font-bold text-3xl text-white">156</div>
                </div>
                <div class="w-12 h-12 rounded-xl bg-ocean-500/20 flex items-center justify-center">
                  <svg class="w-6 h-6 text-ocean-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>

              <div class="h-px bg-white/5"></div>

              <!-- Cost savings -->
              <div class="flex items-center justify-between">
                <div>
                  <div class="text-xs text-gray-500 mb-1">Annual Savings</div>
                  <div class="font-display font-bold text-3xl text-white">$84K</div>
                </div>
                <div class="w-12 h-12 rounded-xl bg-purple-500/20 flex items-center justify-center">
                  <svg class="w-6 h-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941" />
                  </svg>
                </div>
              </div>

              <!-- Progress chart -->
              <div class="pt-4">
                <div class="text-[10px] text-gray-600 mb-2 font-mono">EFFICIENCY GAINS</div>
                <div class="flex gap-1 items-end h-20">
                  {[25, 35, 40, 55, 50, 65, 70, 80, 85, 92, 95, 98].map((h, i) => (
                    <div 
                      class="flex-1 rounded-sm bg-gradient-to-t from-kiwi-500/40 to-kiwi-500/20 transition-all duration-500 hover:from-kiwi-500/60 hover:to-kiwi-500/40" 
                      style={`height: ${h}%; animation-delay: ${i * 100}ms;`}
                    ></div>
                  ))}
                </div>
              </div>
            </div>
          </div>

          <!-- Floating transformation badge -->
          <div class="glass-strong rounded-xl p-4 w-64 absolute -bottom-4 -left-6 animate-float shadow-xl" style="animation-delay: -2s;">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-kiwi-500/30 to-ocean-500/30 flex items-center justify-center">
                <svg class="w-5 h-5 text-kiwi-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
              </div>
              <div>
                <div class="text-xs text-gray-500">Digital Transformation</div>
                <div class="text-sm font-semibold text-white">Paper → Digital</div>
              </div>
            </div>
            <div class="text-[10px] text-gray-600">Real-time dashboards · Secure cloud storage · Mobile access</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce opacity-20">
    <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
    </svg>
  </div>
</section>
