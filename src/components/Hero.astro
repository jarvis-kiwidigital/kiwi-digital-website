---
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Animated background -->
  <div class="absolute inset-0" data-parallax>
    <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] rounded-full bg-kiwi-500/8 blur-[120px] animate-morph"></div>
    <div class="absolute bottom-1/3 right-1/4 w-[500px] h-[500px] rounded-full bg-ocean-500/6 blur-[100px] animate-morph" style="animation-delay: -4s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] rounded-full bg-kiwi-600/4 blur-[80px] animate-pulse-slow"></div>
    <div class="absolute inset-0 grid-bg opacity-40"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,transparent_30%,rgba(10,10,15,0.8)_70%,rgba(10,10,15,1)_100%)]"></div>
  </div>

  <div class="relative z-10 container-wide">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Text -->
      <div>
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full glass mb-8 animate-slide-down" style="animation-delay: 0.2s; animation-fill-mode: both;">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-kiwi-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-kiwi-400"></span>
          </span>
          <span class="text-xs font-medium text-gray-400 tracking-wide">AI-Native Development Studio — Hawke's Bay, NZ</span>
        </div>

        <!-- Heading -->
        <h1 class="font-display font-bold text-5xl sm:text-6xl lg:text-7xl leading-[0.95] tracking-tight mb-8 animate-slide-up" style="animation-delay: 0.3s; animation-fill-mode: both;">
          <span class="text-white">We build</span><br />
          <span class="gradient-text">intelligent</span><br />
          <span class="text-white">systems</span>
        </h1>

        <!-- Subtitle -->
        <p class="max-w-lg text-lg text-gray-400 leading-relaxed mb-10 animate-slide-up text-balance" style="animation-delay: 0.5s; animation-fill-mode: both;">
          AI-powered software that transforms how New Zealand businesses operate.
          From custom agents to full-stack applications — engineered for real impact.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row items-start gap-4 animate-slide-up" style="animation-delay: 0.7s; animation-fill-mode: both;">
          <a href="#contact" class="btn-primary">
            Start a Project
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
          <a href="#work" class="btn-secondary">
            View Our Work
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="flex items-center gap-8 mt-12 animate-fade-in" style="animation-delay: 1s; animation-fill-mode: both;">
          <div class="flex items-center gap-2">
            <span class="text-2xl font-display font-bold text-white" data-count="127+">127+</span>
            <span class="text-xs text-gray-500 leading-tight">Clients<br/>Served</span>
          </div>
          <div class="w-px h-8 bg-white/10"></div>
          <div class="flex items-center gap-2">
            <span class="text-2xl font-display font-bold text-white" data-count="10+">10+</span>
            <span class="text-xs text-gray-500 leading-tight">Years<br/>Building</span>
          </div>
          <div class="w-px h-8 bg-white/10"></div>
          <div class="flex items-center gap-2">
            <span class="text-2xl font-display font-bold text-white" data-count="$200M">$200M</span>
            <span class="text-xs text-gray-500 leading-tight">Value<br/>Generated</span>
          </div>
        </div>
      </div>

      <!-- Right: Code terminal -->
      <div class="animate-slide-up hidden lg:block" style="animation-delay: 0.6s; animation-fill-mode: both;">
        <div class="code-window shadow-2xl shadow-kiwi-500/5 border-glow">
          <div class="code-window-bar">
            <div class="code-dot bg-red-500/70"></div>
            <div class="code-dot bg-yellow-500/70"></div>
            <div class="code-dot bg-green-500/70"></div>
            <span class="ml-3 text-xs text-gray-500 font-mono">kiwi-agent.ts</span>
          </div>
          <div class="p-5 font-mono text-[13px] leading-relaxed overflow-hidden">
            <div class="text-gray-500">// Your AI-powered business agent</div>
            <div>
              <span class="text-purple-400">import</span>
              <span class="text-gray-300"> { </span>
              <span class="text-kiwi-300">Agent</span>
              <span class="text-gray-300">, </span>
              <span class="text-kiwi-300">Workflow</span>
              <span class="text-gray-300"> } </span>
              <span class="text-purple-400">from</span>
              <span class="text-amber-300"> '@kiwi/ai'</span>
            </div>
            <br />
            <div>
              <span class="text-purple-400">const</span>
              <span class="text-ocean-300"> agent</span>
              <span class="text-gray-500"> = </span>
              <span class="text-purple-400">new</span>
              <span class="text-kiwi-300"> Agent</span>
              <span class="text-gray-300">({</span>
            </div>
            <div class="pl-4">
              <span class="text-gray-300">name: </span>
              <span class="text-amber-300">'operations-ai'</span>
              <span class="text-gray-300">,</span>
            </div>
            <div class="pl-4">
              <span class="text-gray-300">tools: [</span>
              <span class="text-amber-300">'email'</span>
              <span class="text-gray-300">, </span>
              <span class="text-amber-300">'calendar'</span>
              <span class="text-gray-300">, </span>
              <span class="text-amber-300">'crm'</span>
              <span class="text-gray-300">],</span>
            </div>
            <div class="pl-4">
              <span class="text-gray-300">model: </span>
              <span class="text-amber-300">'claude-4'</span>
              <span class="text-gray-300">,</span>
            </div>
            <div>
              <span class="text-gray-300">})</span>
            </div>
            <br />
            <div>
              <span class="text-purple-400">const</span>
              <span class="text-ocean-300"> workflow</span>
              <span class="text-gray-500"> = </span>
              <span class="text-gray-300">agent.</span>
              <span class="text-ocean-300">createWorkflow</span>
              <span class="text-gray-300">({</span>
            </div>
            <div class="pl-4">
              <span class="text-gray-300">trigger: </span>
              <span class="text-amber-300">'new-enquiry'</span>
              <span class="text-gray-300">,</span>
            </div>
            <div class="pl-4">
              <span class="text-gray-300">steps: [</span>
            </div>
            <div class="pl-8">
              <span class="text-gray-300">classify(</span>
              <span class="text-amber-300">'intent'</span>
              <span class="text-gray-300">),</span>
            </div>
            <div class="pl-8">
              <span class="text-gray-300">routeTo(</span>
              <span class="text-amber-300">'team-member'</span>
              <span class="text-gray-300">),</span>
            </div>
            <div class="pl-8">
              <span class="text-gray-300">respond({ </span>
              <span class="text-gray-300">tone: </span>
              <span class="text-amber-300">'professional'</span>
              <span class="text-gray-300"> }),</span>
            </div>
            <div class="pl-4">
              <span class="text-gray-300">]</span>
            </div>
            <div>
              <span class="text-gray-300">})</span>
            </div>
            <br />
            <div class="flex items-center">
              <span class="text-kiwi-400">▸</span>
              <span class="text-gray-300 ml-1"> workflow.</span>
              <span class="text-ocean-300">deploy</span>
              <span class="text-gray-300">()</span>
              <span class="w-2 h-5 bg-kiwi-400 ml-1 animate-pulse inline-block"></span>
            </div>
          </div>
        </div>

        <!-- Floating metrics card -->
        <div class="glass-strong rounded-xl p-4 w-56 absolute -bottom-4 -left-6 animate-float shadow-xl" style="animation-delay: -2s;">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-8 h-8 rounded-lg bg-kiwi-500/20 flex items-center justify-center">
              <svg class="w-4 h-4 text-kiwi-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941" />
              </svg>
            </div>
            <div>
              <div class="text-xs text-gray-500">Processing Time</div>
              <div class="text-sm font-semibold text-white">-73% faster</div>
            </div>
          </div>
          <div class="flex gap-1">
            {[40, 65, 45, 80, 55, 90, 70, 95, 85, 92].map(h => (
              <div class="flex-1 rounded-sm bg-kiwi-500/30" style={`height: ${h * 0.3}px;`}></div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce opacity-20">
    <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
    </svg>
  </div>
</section>
